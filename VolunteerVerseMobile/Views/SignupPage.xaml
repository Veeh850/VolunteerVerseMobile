<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="VolunteerVerseMobile.Views.SignupPage"
             Title="SignupPage">
    <VerticalStackLayout Padding="20">
        <Label 
            Text="Create account"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Title"
            Margin="0,0,0,20"/>

        <VerticalStackLayout Spacing="10">

            <material:TextField Title="First name" />
            <material:TextField Title="Last name" />
            <material:TextField Title="Email address" />
            <material:TextField Title="Phone number" Keyboard="Numeric" />
            <material:TextField Title="Password" />
            <material:TextField Title="Confirm password" />
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>